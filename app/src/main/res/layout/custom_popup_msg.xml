<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/my_border_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/_5sdp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="false" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:padding="@dimen/_6sdp"
                android:orientation="vertical" >
                <prabhalab.client.location.CustomTextView
                    android:id="@+id/tilteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="visible"
                    android:text="Tilte"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:orientation="vertical">
                <prabhalab.client.location.CustomTextViewLight
                    android:id="@+id/messageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:textColor="@color/f56"
                    android:text="body"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>
            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:background="@color/view_color"
                android:layout_height="0.1dp" />
            <LinearLayout
                android:id="@+id/buttonlayout"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center|end"
                android:layout_marginBottom="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_height="wrap_content" >
                <prabhalab.client.location.CustomTextViewLight
                    android:id="@+id/popup_cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Cancel"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:visibility="gone"
                    android:textColor="@color/f56"
                    style="?android:attr/buttonStyleSmall"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:textSize="@dimen/_16sdp" />
                <View
                    android:layout_width="@dimen/_16sdp"
                    android:visibility="visible"
                    android:layout_height="1dp" />

                <!--<mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/popup_yes_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:textSize="@dimen/_16sdp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:textColor="@color/appbasecolor"
                    style="?android:attr/buttonStyleSmall"
                    android:text="@string/OK" />-->


                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/popup_yes_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    fancy:fb_borderColor="@color/colorPrimary"
                    fancy:fb_defaultColor="@color/colorPrimary"
                    fancy:fb_focusColor="@color/colorPrimary"
                    fancy:fb_iconPosition="left"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    fancy:fb_radius="5dp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    fancy:fb_text="OK"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    fancy:fb_textSize="@dimen/_16sdp"
                    fancy:fb_textColor="@color/white" />



            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>









