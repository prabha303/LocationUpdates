<android.support.v7.widget.CardView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:card_view="http://schemas.android.com/apk/res-auto"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
        card_view:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/job_layout"
        card_view:cardElevation="@dimen/_3sdp"
        android:orientation="vertical"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <!--#F6F6F6-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.3"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:orientation="horizontal">
                    <prabhalab.client.location.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="4dp"
                        android:layout_gravity="center"
                        android:gravity="start|center"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="12dp"
                        android:text="BTR Ref :#"/>

                    <prabhalab.client.location.CustomTextViewRegular
                        android:id="@+id/order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="17sp"
                        android:layout_gravity="center"
                        android:gravity="start|center"
                        android:textColor="@color/white"
                        android:text=" "/>


                    <prabhalab.client.location.CustomTextViewRegular
                        android:id="@+id/order_dates"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:gravity="start|center"
                        android:textColor="#a9a9a9"
                        android:text=""/>


                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:padding="@dimen/_3sdp"
                android:orientation="horizontal">

                <prabhalab.client.location.CustomTextView
                    android:id="@+id/passangerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/f56"
                    android:text="passangerName" />

                <prabhalab.client.location.CustomTextViewLight
                    android:id="@+id/jobDateTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:textSize="14sp"
                    android:text="Hi" />


                </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:padding="@dimen/_3sdp"
                android:orientation="horizontal">

                <prabhalab.client.location.login.FontAweSomeTextView
                    android:id="@+id/pointCircleFontGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textColor="#01b36c"
                    android:textSize="10sp"
                    android:text="@string/fa_circle"/>


                <prabhalab.client.location.CustomTextViewLight
                    android:id="@+id/pickupAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:text="" />

            </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:padding="@dimen/_3sdp"
        android:orientation="horizontal">

        <prabhalab.client.location.login.FontAweSomeTextView
            android:id="@+id/pointCircleFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="center"
            android:textColor="@color/dest_color"
            android:textSize="10sp"
            android:text="@string/fa_circle"/>


        <prabhalab.client.location.CustomTextViewLight
            android:id="@+id/dropAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:text="" />

    </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
