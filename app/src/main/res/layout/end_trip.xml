                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginStart="@dimen/_4sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_weight="2"
                android:textColor="@color/f56"
                android:text="Did you any traffic vialation" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <RadioGroup
                    android:id="@+id/did_see_traffic_violation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Yes"
                        android:id="@+id/traffic_violation_yes"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="No"
                        android:id="@+id/traffic_violation_no"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="horizontal">
            <in.vendor.rides.CustomTextViewLight
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginStart="@dimen/_4sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_weight="2"
                android:textColor="@color/f56"
                android:text="Was the driver using cell phone while driving" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <RadioGroup
                    android:id="@+id/cellphone_while_driving"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Yes"
                        android:id="@+id/while_driving_yes"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="No"
                        android:id="@+id/while_driving_no"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <in.vendor.rides.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center|left"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_weight="2"
            android:textColor="@color/f56"
            android:text="Signature" />

        <LinearLayout
            android:id="@+id/signLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cart_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ffff"
                app:cardCornerRadius="@dimen/cardview_default_radius"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:padding="1dp"
                app:cardPreventCornerOverlap="true"
                card_view:cardUseCompatPadding="true">

                <in.vendor.rides.job.DrawingView
                    android:id="@+id/drawing"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:orientation="horizontal">
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/clear_sign"
                android:layout_width="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center|right"
                android:layout_height="wrap_content"
                fancy:fb_borderColor="@color/colorPrimary"
                fancy:fb_defaultColor="@color/colorPrimaryDark"
                fancy:fb_focusColor="@color/white"
                android:foregroundGravity="center"
                fancy:fb_iconPaddingLeft= "0dp"
                fancy:fb_text="Clear"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                fancy:fb_iconPaddingRight= "4dp"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="3dp"
                fancy:fb_textSize="@dimen/_12sdp"
                fancy:fb_textColor="#FFFFFF" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:orientation="horizontal">
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/go_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_7sdp"
                fancy:fb_borderColor="@color/colorPrimary"
                fancy:fb_defaultColor="@color/colorPrimaryDark"
                fancy:fb_focusColor="@color/white"
                android:foregroundGravity="center"
                fancy:fb_iconPaddingLeft= "0dp"
                fancy:fb_text="Back"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                fancy:fb_radius="5dp"
                fancy:fb_textSize="@dimen/_12sdp"
                fancy:fb_textColor="#FFFFFF" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center"
                fancy:fb_borderColor="@color/colorPrimary"
                fancy:fb_defaultColor="@color/colorPrimaryDark"
                fancy:fb_focusColor="@color/white"
                android:foregroundGravity="center"
                fancy:fb_iconPaddingLeft= "0dp"
                android:layout_weight="1"
                fancy:fb_text="Submit"
                android:padding="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                fancy:fb_iconPaddingRight= "4dp"
                fancy:fb_radius="5dp"
                fancy:fb_textSize="@dimen/_12sdp"
                fancy:fb_textColor="#FFFFFF" />


        </LinearLayout>




    </LinearLayout>






</LinearLayout>