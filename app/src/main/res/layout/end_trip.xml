                    android:inputType="textMultiLine"
                    android:text=""
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/f56"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>



            <in.vendor.rides.CustomTextViewLight
