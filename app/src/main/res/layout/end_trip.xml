                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:textColor="@color/f56"
                android:text="Upload Bills" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/toll_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <in.vendor.rides.login.FontAweSomeTextView
                        android:id="@+id/toll_font"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/fa_upload" />
                    <in.vendor.rides.CustomTextViewLight
                        android:id="@+id/toll_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:textColor="@color/f56"
                        android:text="Toll" />

                      <ImageView
                          android:id="@+id/toll_image"
                          android:layout_width="match_parent"
                          android:gravity="center"
                          android:visibility="gone"
                          android:layout_gravity="center"
                          android:src="@drawable/car_icon"
                          android:layout_height="match_parent" />



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/parking_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <in.vendor.rides.login.FontAweSomeTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/fa_upload" />
                    <in.vendor.rides.CustomTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:textColor="@color/f56"
                        android:text="Parking" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/dutysheet_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <in.vendor.rides.login.FontAweSomeTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/fa_upload" />
                    <in.vendor.rides.CustomTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:layout_weight="1"
                        android:textColor="@color/f56"
                        android:text="Dutysheet" />
                </LinearLayout>


            </LinearLayout>










            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/go_next"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="wrap_content"
                fancy:fb_borderColor="@color/colorPrimary"
                fancy:fb_defaultColor="@color/colorPrimaryDark"
                android:padding="@dimen/_7sdp"
                fancy:fb_focusColor="@color/white"
                android:foregroundGravity="center"
                fancy:fb_iconPaddingLeft= "0dp"
                fancy:fb_text="NEXT"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                fancy:fb_iconPaddingRight= "4dp"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                fancy:fb_textSize="@dimen/_16sdp"
                fancy:fb_textColor="#FFFFFF" />
        </LinearLayout>


    </LinearLayout>


